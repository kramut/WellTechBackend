generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                    Int       @id @default(autoincrement())
  name                  String
  category              String
  description           String?   @db.Text
  price                 Decimal?  @db.Decimal(10, 2)
  affiliateLink         String    @map("affiliate_link") @db.Text
  affiliateProgram      String?   @map("affiliate_program")
  commissionPercentage  Decimal?  @map("commission_percentage") @db.Decimal(5, 2)
  imageUrl              String?   @map("image_url") @db.Text
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  affiliateEarnings     AffiliateEarning[]

  @@map("products")
}

model Article {
  id                  Int       @id @default(autoincrement())
  title               String
  slug                String    @unique
  category            String
  content             String    @db.Text
  seoMetaTitle        String?   @map("seo_meta_title")
  seoMetaDescription  String?   @map("seo_meta_description")
  featuredImageUrl    String?   @map("featured_image_url") @db.Text
  productIds          Int[]     @map("product_ids")
  publishedAt         DateTime? @map("published_at")
  createdAt           DateTime  @default(now()) @map("created_at")
  views               Int       @default(0)

  videos              Video[]

  @@map("articles")
}

model Video {
  id           Int       @id @default(autoincrement())
  title        String
  articleId    Int?      @map("article_id")
  script       String    @db.Text
  videoUrl     String?   @map("video_url") @db.Text
  tiktokUrl    String?   @map("tiktok_url") @db.Text
  tiktokViews  Int       @default(0) @map("tiktok_views")
  createdAt    DateTime  @default(now()) @map("created_at")

  article      Article?  @relation(fields: [articleId], references: [id])

  @@map("videos")
}

model AffiliateEarning {
  id          Int       @id @default(autoincrement())
  productId   Int       @map("product_id")
  clicks      Int       @default(0)
  conversions Int       @default(0)
  revenue     Decimal   @default(0) @db.Decimal(10, 2)
  createdAt   DateTime  @default(now()) @map("created_at")

  product     Product   @relation(fields: [productId], references: [id])

  @@map("affiliate_earnings")
}

model Trend {
  id          Int       @id @default(autoincrement())
  keyword     String
  source      String    // "google", "reddit", "amazon"
  score       Float
  category    String?
  metadata    Json?     // Dati aggiuntivi
  createdAt   DateTime  @default(now()) @map("created_at")
  
  @@map("trends")
}

model Guide {
  id           Int       @id @default(autoincrement())
  title        String
  slug         String    @unique
  description  String    @db.Text
  category     String
  duration     String?
  difficulty   String?   @default("Media")
  imageUrl     String?   @map("image_url") @db.Text
  articleIds   Int[]     @map("article_ids")
  productIds   Int[]     @map("product_ids")
  publishedAt  DateTime? @map("published_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  @@map("guides")
}

model PathJourney {
  id                Int       @id @default(autoincrement())
  goalId            String    @unique @map("goal_id")
  title             String
  description       String    @db.Text
  estimatedDuration String    @map("estimated_duration")
  color             String
  steps             Json      // Array of PathStep objects
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  @@map("path_journeys")
}

model WizardRecommendation {
  id          Int       @id @default(autoincrement())
  category    String    @unique
  productIds  Int[]     @map("product_ids")
  articleIds  Int[]     @map("article_ids")
  guideIds    Int[]     @map("guide_ids")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("wizard_recommendations")
}

model ProductCandidate {
  id                  Int       @id @default(autoincrement())
  name                String
  category            String
  description         String?   @db.Text
  price               Decimal?  @db.Decimal(10, 2)
  affiliateLink       String    @map("affiliate_link") @db.Text
  affiliateProgram    String    @map("affiliate_program") // "awin", "clickbank", "amazon"
  commissionPercentage Decimal? @map("commission_percentage") @db.Decimal(5, 2)
  imageUrl            String?   @map("image_url") @db.Text
  rating              Float?
  reviewCount         Int?      @map("review_count")
  source              String    // "awin", "clickbank", etc.
  sourceId            String?   @map("source_id") // ID nel sistema sorgente
  status              String    @default("pending") // "pending", "approved", "rejected"
  rejectionReason     String?   @map("rejection_reason") @db.Text
  approvedAt          DateTime? @map("approved_at")
  approvedBy          String?   @map("approved_by") // User ID o email
  metadata            Json?     // Dati aggiuntivi
  landingPageUrl      String?   @map("landing_page_url") @db.Text   // URL risolto dopo redirect
  landingPageData     Json?     @map("landing_page_data")            // Analisi strutturata della landing page
  analysisStatus      String?   @map("analysis_status")              // "pending", "analyzing", "completed", "failed"
  analysisError       String?   @map("analysis_error") @db.Text      // Errore analisi se fallita
  analyzedAt          DateTime? @map("analyzed_at")                   // Quando Ã¨ stata analizzata
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")
  
  @@map("product_candidates")
}
